<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicPlan2">

    <TextView
        android:id="@+id/tv_basic_plan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basics: Lesson - 2"
        android:padding="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/tv_basic_plan2_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translate this sentence"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/tv_basic_plan2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.02"/>

    <TextView
        android:id="@+id/tv_basic_plan2_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A Man"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_basic_plan2_translate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/et_basic_plan2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_basic_plan2_sentence"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="homme"
        app:layout_constraintTop_toBottomOf="@id/et_basic_plan2_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.2"
        android:onClick="addTag"
        android:tag="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="chat"
        app:layout_constraintTop_toBottomOf="@id/et_basic_plan2_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.8"
        android:onClick="addTag"
        android:tag="2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="check"
        app:layout_constraintVertical_bias="0.89"
        android:onClick="check"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="next"
        app:layout_constraintVertical_bias="0.99"/>


</android.support.constraint.ConstraintLayout>